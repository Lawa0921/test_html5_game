{
  "name": "inn-management-game",
  "version": "0.2.0",
  "description": "悅來客棧 - 治癒系客棧經營管理遊戲",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "start:web": "node scripts/start-web-server.js",
    "dev": "electron . --watch",
    "test": "vitest",
    "build:win": "electron-builder --win",
    "build:mac": "electron-builder --mac",
    "build:linux": "electron-builder --linux",
    "build:all": "electron-builder --win --mac --linux",
    "package:win": "npm run build:win",
    "assets:generate": "node scripts/generate-all-assets.js",
    "assets:placeholders": "node scripts/generate-placeholders.js",
    "assets:game": "node scripts/generate-game-assets.js",
    "assets:animations": "node scripts/generate-character-animations.js",
    "assets:items": "node scripts/generate-items-and-effects.js",
    "assets:combat": "node scripts/generate-combat-ui.js",
    "assets:quest": "node scripts/generate-quest-items.js",
    "assets:scenes": "node scripts/generate-scene-objects.js",
    "assets:phase1": "npm run assets:combat && npm run assets:quest && npm run assets:scenes",
    "assets:gameflow": "node scripts/generate-game-flow-placeholders.js",
    "assets:check": "node scripts/check-assets.js",
    "validate:character": "node scripts/validate-character-assets.js"
  },
  "keywords": [
    "game",
    "rpg",
    "electron",
    "phaser"
  ],
  "author": "Your Name",
  "license": "MIT",
  "dependencies": {
    "canvas": "^3.2.0",
    "phaser": "^3.90.0"
  },
  "devDependencies": {
    "@vitest/coverage-v8": "^4.0.3",
    "electron": "^38.3.0",
    "electron-builder": "^26.1.0",
    "vitest": "^4.0.3"
  },
  "build": {
    "appId": "com.yourstudio.innManagementGame",
    "productName": "悅來客棧",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "game.js",
      "index.html",
      "src/**/*",
      "assets/**/*",
      "package.json",
      "!**/node_modules/*/{CHANGELOG.md,README.md,README,readme.md,readme}",
      "!**/node_modules/*/{test,__tests__,tests,powered-test,example,examples}",
      "!**/node_modules/*.d.ts",
      "!**/node_modules/.bin",
      "!**/*.{iml,o,hprof,orig,pyc,pyo,rbc,swp,csproj,sln,xproj}",
      "!.editorconfig",
      "!**/._*",
      "!**/{.DS_Store,.git,.hg,.svn,CVS,RCS,SCCS,.gitignore,.gitattributes}",
      "!**/{__pycache__,thumbs.db,.flowconfig,.idea,.vs,.nyc_output}",
      "!**/{appveyor.yml,.travis.yml,circle.yml}",
      "!**/{npm-debug.log,yarn.lock,.yarn-integrity,.yarn-metadata.json}",
      "!tests",
      "!coverage",
      "!.git",
      "!Dockerfile",
      "!docker-compose.yml",
      "!*.sh",
      "!CLAUDE.md",
      "!*.md"
    ],
    "win": {
      "target": [
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "assets/icon.png"
    },
    "portable": {
      "artifactName": "悅來客棧-${version}-portable.exe"
    },
    "mac": {
      "target": [
        "dmg"
      ],
      "icon": "assets/icon.png"
    },
    "linux": {
      "target": [
        "AppImage"
      ],
      "icon": "assets/icon.png"
    }
  }
}
